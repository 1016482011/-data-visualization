{
  "env": {
    "node": true,
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": "eslint:recommended",
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": "off",
    "linebreak-style": "off",
    "use-isnan": "off",
    "no-debugger": "warn",
    "no-unused-vars": "off",
    "no-constant-condition": ["error", {
      "checkLoops": false
    }],
    "no-console": [
      "error",
      {
        "allow": ["debug", "log", "dir", "error", "info", "warn"]
      }
    ],
    "react/jsx-uses-react": "error",
    "react/jsx-uses-vars": "error"
  }
}